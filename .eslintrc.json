{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "@open-wc",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "ignorePackages": true
      }
    ],
    "class-methods-use-this": 1,
    "no-param-reassign": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
